{
    "name": "setup accounts",
    "steps": [
        {
            "step": "externalSteps",
            "path": "../../ethereum-fee-prepay/mandos/setup_accounts.scen.json"
        },
        {
            "step": "setState",
            "accounts": {
                "address:user1": {
                    "nonce": "0",
                    "balance": "3,000,000",
                    "esdt": {
                        "str:BRIDGE-123456": "1000"
                    },
                    "storage": {}
                },
                "address:user2": {
                    "nonce": "0",
                    "balance": "3,000,000",
                    "esdt": {
                        "str:BRIDGE-123456": "1000"
                    },
                    "storage": {}
                }
            },
            "newAddresses": [
                {
                    "creatorAddress": "address:owner",
                    "creatorNonce": "2",
                    "newAddress": "sc:esdt_safe"
                }
            ]
        },
        {
            "step": "scDeploy",
            "txId": "deploy",
            "tx": {
                "from": "address:owner",
                "contractCode": "file:../output/esdt-safe.wasm",
                "value": "0",
                "arguments": [
                    "sc:ethereum_fee_prepay",
                    "str:BRIDGE-123456"
                ],
                "gasLimit": "20,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "address:owner": {
                    "nonce": "3",
                    "balance": "0",
                    "storage": {}
                },
                "sc:esdt_safe": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "str:feeEstimatorContractAddress": "sc:ethereum_fee_prepay",
                        "str:tokenWhitelist.value|u32:1": "str:BRIDGE-123456",
                        "+": ""
                    },
                    "code": "file:../output/esdt-safe.wasm"
                },
                "+": {}
            }
        },
        {
            "step": "setState",
            "comment": "setting local burn role",
            "accounts": {
                "sc:esdt_safe": {
                    "nonce": "0",
                    "balance": "0",
                    "esdt": {
                        "str:BRIDGE-123456": {
                            "balance": "0",
                            "roles": [
                                "ESDTRoleLocalBurn"
                            ]
                        }
                    },
                    "storage": {
                        "str:feeEstimatorContractAddress": "sc:ethereum_fee_prepay",
                        "str:tokenWhitelist.value|u32:1": "str:BRIDGE-123456",

                        "str:tokenWhitelist.info": "0x00000001000000010000000100000001",
                        "str:tokenWhitelist.node_idBRIDGE-123456": "0x01",
                        "str:tokenWhitelist.node_links|u32:1": "0x0000000000000000"
                    },
                    "code": "file:../output/esdt-safe.wasm",
                    "owner": "address:owner"
                }
            }
        },
        {
            "step": "scCall",
            "txId": "add-esdt-safe-sc-to-whitelist",
            "tx": {
                "from": "address:owner",
                "to": "sc:ethereum_fee_prepay",
                "value": "0",
                "function": "addToWhitelist",
                "arguments": [
                    "sc:esdt_safe"
                ],
                "gasLimit": "15,000,000",
                "gasPrice": "0"
            },
            "expect": {
                "status": "0",
                "message": "",
                "gas": "*",
                "refund": "*"
            }
        },
        {
            "step": "checkState",
            "accounts": {
                "sc:ethereum_fee_prepay": {
                    "nonce": "0",
                    "balance": "0",
                    "storage": {
                        "str:aggregator": "sc:price_aggregator",
                        "str:whitelist.value|u32:1": "address:owner",
                        "str:whitelist.value|u32:2": "sc:esdt_safe",
                        "+": ""
                    },
                    "code": "*"
                },
                "+": {}
            }
        }
    ]
}
